cabal-version:       3.0
name:                aoc20-hs
version:             0.1.0.0
synopsis:            Advent of Code 2020 in Haskell
license:             MIT
license-file:        LICENSE.txt
author:              Jonathan Yong
maintainer:          yongrenjie@gmail.com
build-type:          Simple
extra-source-files:  CHANGELOG.md
data-dir:            inputs

-- common stanzas: see https://vrom911.github.io/blog/common-stanzas
common base-stanza
  build-depends:       base ^>=4.14
                       , split
                       , text
                       , containers
                       , megaparsec
                       , mtl
                       , transformers
  default-language:    Haskell2010
  other-modules:       Paths_aoc20_hs
  ghc-options:         -Wall -O2

common base-stanza-relude
  build-depends:       base ^>=4.14
                       , relude ^>=0.7.0.0
                       , split
                       , text
                       , containers
                       , megaparsec
                       , mtl
  default-language:    Haskell2010
  other-modules:       Paths_aoc20_hs
  ghc-options:         -Wall -O2
  mixins:              base hiding (Prelude)
                       , relude (Relude as Prelude)


